<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingHorizontal="20sp"
    android:orientation="vertical"
    tools:context=".ui.carrito.realizar_pago.otro_metodo.OtroMetodoFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Pago Con Bitcoin"
        android:textColor="@color/teal_200"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/border_radius_8"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/buttonGenerarToken"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/bitcoin_logo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:fontFamily="monospace"
            android:text="Dirección Bitcoin:"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/bitcoinAddressEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Dirección Bitcoin"
            android:inputType="text"
            android:textColor="@color/teal_200"
            android:textColorHint="#5E018786" />

        <EditText
            android:id="@+id/bitcoinAmountEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Cantidad Bitcoin a pagar"
            android:inputType="numberDecimal"
            android:textColor="@color/teal_200"
            android:textColorHint="#5E018786" />

        <EditText
            android:id="@+id/bitcoinConfirmationsEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Número de Confirmaciones"
            android:inputType="numberPassword"
            android:textColor="@color/teal_200"
            android:textColorHint="#5E018786" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonCancelar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:backgroundTint="@color/black"
            android:text="Cancelar"
            android:textColor="@color/teal_200" />


        <Button
            android:id="@+id/buttonPagar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:background="@drawable/border_radius_8"
            android:text="Pagar"
            android:textColor="@color/black" />

    </LinearLayout>
</RelativeLayout>
